<Window x:Class="Foodbook.Presentation.Views.JudgeResultDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Judge Results" 
        Height="1000" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="🎯 AI Judge Results" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#111827"
                   Margin="0,0,0,20"/>

        <!-- Results Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Score Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Overall Score" 
                                  FontSize="20" 
                                  FontWeight="Bold" 
                                  Foreground="#111827"
                                  Margin="0,0,0,12"/>
                        <TextBlock x:Name="ScoreText"
                                  Text="8/10" 
                                  FontSize="48" 
                                  FontWeight="Bold" 
                                  Foreground="#4CAF50"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>
                        <TextBlock x:Name="RatingText"
                                  Text="Excellent" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#6B7280"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Comment Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="💬 AI Comment" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#111827"
                                  Margin="0,0,0,12"/>
                        <TextBlock x:Name="CommentText"
                                  Text="Your dish looks amazing! Great presentation and technique." 
                                  FontSize="14" 
                                  Foreground="#374151"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Detailed Analysis Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Presentation Score -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,4,4">
                        <StackPanel>
                            <TextBlock Text="🎨 Presentation" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="#111827"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="PresentationScoreText"
                                      Text="8/10" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#4CAF50"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Color Score -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="4,0,0,4">
                        <StackPanel>
                            <TextBlock Text="🌈 Color" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="#111827"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="ColorScoreText"
                                      Text="9/10" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#4CAF50"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Texture Score -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,4,4,0">
                        <StackPanel>
                            <TextBlock Text="🤏 Texture" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="#111827"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="TextureScoreText"
                                      Text="7/10" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#4CAF50"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Plating Score -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="4,4,0,0">
                        <StackPanel>
                            <TextBlock Text="🍽️ Plating" 
                                      FontSize="16" 
                                      FontWeight="Bold" 
                                      Foreground="#111827"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="PlatingScoreText"
                                      Text="8/10" 
                                      FontSize="20" 
                                      FontWeight="Bold" 
                                      Foreground="#4CAF50"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Health Notes -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="💚 Health Notes" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#111827"
                                  Margin="0,0,0,8"/>
                        <TextBlock x:Name="HealthNotesText"
                                  Text="The dish appears to have good nutritional balance" 
                                  FontSize="12" 
                                  Foreground="#6B7280"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Chef Tips -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="👨‍🍳 Chef Tips" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#111827"
                                  Margin="0,0,0,8"/>
                        <TextBlock x:Name="ChefTipsText"
                                  Text="• Use a white plate for better color contrast\n• Garnish should complement, not overwhelm the dish" 
                                  FontSize="12" 
                                  Foreground="#6B7280"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Suggestions -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="💡 Suggestions for Improvement" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#111827"
                                  Margin="0,0,0,8"/>
                        <TextBlock x:Name="SuggestionsText"
                                  Text="• Consider adding a garnish for better visual appeal\n• Try different plating techniques\n• Experiment with seasoning" 
                                  FontSize="12" 
                                  Foreground="#6B7280"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Close" 
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Right" 
                Margin="0,20,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>