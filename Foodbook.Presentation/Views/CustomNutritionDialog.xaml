<Window x:Class="Foodbook.Presentation.Views.CustomNutritionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🤖 AI Nutrition Analysis" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="AlertStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3CD"/>
            <Setter Property="BorderBrush" Value="#FFEAA7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🤖 AI Nutrition Analysis" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="Enter your recipe text and let AI analyze its nutritional content" 
                       FontSize="12" 
                       Foreground="#7F8C8D"/>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Recipe Input -->
                <TextBlock Text="📝 Recipe Text" Style="{StaticResource SectionStyle}"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Enter your recipe ingredients and instructions:" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,0,0,10"/>
                        <TextBox x:Name="RecipeTextBox" 
                                 Text="{Binding CustomRecipeText, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 Height="120" 
                                 FontSize="12"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="10"/>
                        <TextBlock Text="Example: 200g thịt bò, 1 củ hành tây, 1 muỗng cà phê muối, 50ml nước tương" 
                                   FontSize="10" 
                                   Foreground="#95A5A6" 
                                   FontStyle="Italic" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Analysis Button -->
                <Button x:Name="AnalyzeButton" 
                        Content="🤖 Analyze with AI" 
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Padding="20,10" 
                        FontSize="14"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,20"
                        Click="AnalyzeButton_Click"/>
                
                <!-- Results Section (Initially Hidden) -->
                <StackPanel x:Name="ResultsPanel" Visibility="Collapsed">
                    <!-- Nutrition Summary -->
                    <TextBlock Text="📊 Nutrition Summary" Style="{StaticResource SectionStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Calories -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="🔥 Calories" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TotalCaloriesText" FontSize="24" FontWeight="Bold" Foreground="#E74C3C"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Protein -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="💪 Protein" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TotalProteinText" FontSize="24" FontWeight="Bold" Foreground="#3498DB"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Carbs -->
                        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="🌾 Carbs" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TotalCarbsText" FontSize="24" FontWeight="Bold" Foreground="#F39C12"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Fat -->
                        <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="🥑 Fat" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                                <TextBlock x:Name="TotalFatText" FontSize="24" FontWeight="Bold" Foreground="#9B59B6"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- AI Assessment -->
                    <TextBlock Text="🤖 AI Health Assessment" Style="{StaticResource SectionStyle}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="AIAssessmentText" 
                                       FontSize="12" 
                                       Foreground="#2C3E50" 
                                       TextWrapping="Wrap"
                                       LineHeight="18"/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Health Alerts -->
                    <TextBlock Text="⚠️ Health Alerts" Style="{StaticResource SectionStyle}"/>
                    <ItemsControl x:Name="HealthAlertsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource AlertStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Type}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="12" 
                                                   Foreground="#856404"/>
                                        <TextBlock Text="{Binding Message}" 
                                                   FontSize="11" 
                                                   Foreground="#856404" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Recommendations -->
                    <TextBlock Text="💡 Recommendations" Style="{StaticResource SectionStyle}"/>
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock x:Name="RecommendationsText" 
                                       FontSize="12" 
                                       Foreground="#2C3E50" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="📊 Export Report" 
                    Background="#3498DB" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Click="ExportButton_Click"/>
            <Button Content="✅ Close" 
                    Background="#27AE60" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="15,8"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
