<Window x:Class="Foodbook.Presentation.Views.ImageManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Management" 
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸ“¸ Image Management" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#111827"
                   Margin="0,0,0,20"/>

        <!-- Content -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="12" 
                Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ–¼ï¸ Image Analysis Features" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="#111827"
                          Margin="0,0,0,16"/>
                
                <TextBlock Text="This feature allows you to:" 
                          FontSize="14" 
                          Foreground="#6B7280"
                          Margin="0,0,0,12"/>
                
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="â€¢ Upload images of your dishes" 
                              FontSize="14" 
                              Foreground="#374151"
                              Margin="0,0,0,4"/>
                    <TextBlock Text="â€¢ Get AI-powered analysis and feedback" 
                              FontSize="14" 
                              Foreground="#374151"
                              Margin="0,0,0,4"/>
                    <TextBlock Text="â€¢ Receive cooking tips and suggestions" 
                              FontSize="14" 
                              Foreground="#374151"
                              Margin="0,0,0,4"/>
                    <TextBlock Text="â€¢ Track your cooking progress over time" 
                              FontSize="14" 
                              Foreground="#374151"/>
                </StackPanel>
                
                <TextBlock Text="ðŸš§ Coming Soon!" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          Foreground="#F59E0B"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Close" 
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Right" 
                Margin="0,20,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>