<Window x:Class="Foodbook.Presentation.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ½ï¸ Foodbook - Sign Up" 
        Height="800" Width="1150"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   FontSize="{TemplateBinding FontSize}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Beautiful gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="0.5"/>
                <GradientStop Color="#f093fb" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decorative overlay -->
        <Grid Opacity="0.1">
            <Ellipse Fill="White" Width="300" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-150,-150,0,0"/>
            <Ellipse Fill="White" Width="200" Height="200" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-100,-100"/>
            <Ellipse Fill="White" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
        </Grid>
        
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Register Form -->
            <Border Grid.Column="0" 
                    Background="White" 
                    Margin="50,50,25,50" 
                    CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="20" 
                                      ShadowDepth="0" 
                                      Opacity="0.3"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="40">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Logo/Brand -->
                        <TextBlock Grid.Row="0" 
                                   Text="ðŸ½ï¸ Foodbook" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#1F2937"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Welcome Title -->
                        <TextBlock Grid.Row="1" 
                                   Text="Create Account" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#1F2937"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Subtitle -->
                        <TextBlock Grid.Row="2" 
                                   Text="Join our community of food lovers and discover amazing recipes." 
                                   FontSize="14" 
                                   Foreground="#6B7280"
                                   HorizontalAlignment="Left"
                                   Margin="0,0,0,24"/>
                        
                        <!-- Username Field -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,16">
                            <TextBlock Text="Username" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="UsernameTextBox" 
                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="50"/>
                        </StackPanel>
                        
                        <!-- Email Field -->
                        <StackPanel Grid.Row="4" Margin="0,0,0,16">
                            <TextBlock Text="Email Address" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151"
                                       Margin="0,0,0,6"/>
                            <TextBox x:Name="EmailTextBox" 
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="50"/>
                        </StackPanel>
                        
                        <!-- Password Field -->
                        <StackPanel Grid.Row="5" Margin="0,0,0,16">
                            <TextBlock Text="Password" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151"
                                       Margin="0,0,0,6"/>
                            <PasswordBox x:Name="PasswordBox" 
                                         Height="50"
                                         Padding="12,12"
                                         FontSize="14"
                                         BorderThickness="1"
                                         BorderBrush="#D1D5DB"
                                         Background="White"
                                         VerticalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Confirm Password Field -->
                        <StackPanel Grid.Row="6" Margin="0,0,0,16">
                            <TextBlock Text="Confirm Password" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#374151"
                                       Margin="0,0,0,6"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" 
                                         Height="50"
                                         Padding="12,12"
                                         FontSize="14"
                                         BorderThickness="1"
                                         BorderBrush="#D1D5DB"
                                         Background="White"
                                         VerticalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Terms Agreement -->
                        <CheckBox Grid.Row="7" 
                                  Content="I agree to the Terms of Service and Privacy Policy" 
                                  IsChecked="{Binding AgreeToTerms}"
                                  FontSize="14" 
                                  Foreground="#374151"
                                  Margin="0,0,0,20"/>
                        
                        <!-- Sign Up Button -->
                        <Button Grid.Row="8" 
                                Content="Create Account" 
                                Style="{StaticResource ModernButton}"
                                Click="SignUp_Click"
                                Margin="0,0,0,20"/>
                        
                        <!-- Login Link -->
                        <StackPanel Grid.Row="9" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Already have an account? " 
                                       FontSize="14" 
                                       Foreground="#6B7280"/>
                            <Button Content="Sign In" 
                                    Style="{StaticResource LinkButton}"
                                    Click="SignIn_Click"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
            
            <!-- Food Image Background -->
            <Border Grid.Column="1" 
                    Margin="25,50,50,50" 
                    CornerRadius="12">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4facfe" Offset="0"/>
                        <GradientStop Color="#00f2fe" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="15" 
                                      ShadowDepth="0" 
                                      Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <!-- Decorative food elements -->
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Margin="40">
                        <TextBlock Text="ðŸ‘¨â€ðŸ³" 
                                   FontSize="120" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="White" 
                                                  BlurRadius="10" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Join Our Community" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" 
                                                  BlurRadius="5" 
                                                  ShadowDepth="1" 
                                                  Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Share your culinary journey" 
                                   FontSize="18" 
                                   Foreground="#F0F9FF"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#000000" 
                                                  BlurRadius="3" 
                                                  ShadowDepth="1" 
                                                  Opacity="0.3"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Close Button -->
        <Button Content="âœ•" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,20,20,0"
                Width="36" 
                Height="36"
                Background="Transparent"
                Foreground="White"
                FontSize="18"
                FontWeight="Bold"
                BorderThickness="0"
                Click="Close_Click"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="18">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF6B6B"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Effect>
                <DropShadowEffect Color="#000000" 
                                  BlurRadius="8" 
                                  ShadowDepth="2" 
                                  Opacity="0.3"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
