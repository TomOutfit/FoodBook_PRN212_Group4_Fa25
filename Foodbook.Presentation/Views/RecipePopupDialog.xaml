<Window x:Class="Foodbook.Presentation.Views.RecipePopupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Management" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderBrush}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="📚 Recipe Management" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Basic Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Title -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,16">
                                <TextBlock Text="Recipe Title *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Title}" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Category -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,16">
                                <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ComboBox SelectedItem="{Binding Category}">
                                    <ComboBoxItem Content="Main Dish"/>
                                    <ComboBoxItem Content="Appetizer"/>
                                    <ComboBoxItem Content="Dessert"/>
                                    <ComboBoxItem Content="Soup"/>
                                    <ComboBoxItem Content="Salad"/>
                                    <ComboBoxItem Content="Breakfast"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Cook Time -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,16">
                                <TextBlock Text="Cook Time (minutes) *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding CookTime}" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Servings -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,16">
                                <TextBlock Text="Servings *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding Servings}" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                            
                            <!-- Difficulty -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,16">
                                <TextBlock Text="Difficulty *" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ComboBox SelectedValue="{Binding Difficulty}">
                                    <ComboBoxItem Content="Easy" Tag="Easy"/>
                                    <ComboBoxItem Content="Medium" Tag="Medium"/>
                                    <ComboBoxItem Content="Hard" Tag="Hard"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <!-- Image URL -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,16">
                                <TextBlock Text="Image URL" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding ImageUrl}" Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Description -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Description" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                        <TextBox Text="{Binding Description}" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Height="80" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"/>
                    </StackPanel>
                </Border>
                
                <!-- Instructions -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Instructions *" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                        <TextBox Text="{Binding Instructions}" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Height="120" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="❌ Cancel" 
                    Style="{StaticResource ModernButton}" 
                    Background="#6B7280" 
                    Click="CancelButton_Click"/>
            <Button Content="💾 Save Recipe" 
                    Style="{StaticResource ModernButton}" 
                    Background="#4CAF50" 
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
