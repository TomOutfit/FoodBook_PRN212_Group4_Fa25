<Window x:Class="Foodbook.Presentation.Views.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“Š Log Viewer - AI Feature Analytics" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="LogItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="ðŸ“Š AI Feature Analytics &amp; Logs" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="Monitor AI feature usage, performance, and errors in real-time" 
                       FontSize="14" Foreground="#64748B" Margin="0,0,0,20"/>
        </StackPanel>
        
        <!-- Filter Controls -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Feature Filter" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="FeatureFilterComboBox" 
                              Width="200" HorizontalAlignment="Left"
                              SelectedIndex="0">
                        <ComboBoxItem Content="All Features" IsSelected="True"/>
                        <ComboBoxItem Content="AI Recipe Generation"/>
                        <ComboBoxItem Content="Nutrition Analysis"/>
                        <ComboBoxItem Content="Ingredient Recognition"/>
                        <ComboBoxItem Content="Cooking Suggestions"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="Log Type Filter" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="LogTypeFilterComboBox" 
                              Width="150" HorizontalAlignment="Left"
                              SelectedIndex="0">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Usage"/>
                        <ComboBoxItem Content="Error"/>
                        <ComboBoxItem Content="Performance"/>
                        <ComboBoxItem Content="AI"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Margin="0,0,12,0">
                    <TextBlock Text="Time Range" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="TimeRangeComboBox" 
                              Width="150" HorizontalAlignment="Left"
                              SelectedIndex="3">
                        <ComboBoxItem Content="Last Hour"/>
                        <ComboBoxItem Content="Last 24 Hours"/>
                        <ComboBoxItem Content="Last 7 Days"/>
                        <ComboBoxItem Content="All Time" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                    <Button x:Name="RefreshButton" Content="ðŸ”„ Refresh" 
                            Background="#3B82F6" Foreground="White"
                            Padding="12,8"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Logs List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="LogsPanel">
                <!-- Logs will be populated here -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
