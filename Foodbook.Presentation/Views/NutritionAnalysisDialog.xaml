<Window x:Class="Foodbook.Presentation.Views.NutritionAnalysisDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🍎 Nutrition Analysis" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="AlertStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF3CD"/>
            <Setter Property="BorderBrush" Value="#FFEAA7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🍎 Nutrition Analysis" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="AI-powered comprehensive nutrition analysis with health insights" 
                       FontSize="12" 
                       Foreground="#7F8C8D"/>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Nutrition Summary -->
                <TextBlock Text="📊 Nutrition Summary" Style="{StaticResource SectionStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Calories -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="🔥 Calories" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="TotalCaloriesText" FontSize="24" FontWeight="Bold" Foreground="#E74C3C"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Protein -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="💪 Protein" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="TotalProteinText" FontSize="24" FontWeight="Bold" Foreground="#3498DB"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Carbs -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="🌾 Carbs" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="TotalCarbsText" FontSize="24" FontWeight="Bold" Foreground="#F39C12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Fat -->
                    <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="🥑 Fat" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="TotalFatText" FontSize="24" FontWeight="Bold" Foreground="#9B59B6"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Nutrition Grade -->
                <TextBlock Text="📈 Nutrition Grade" Style="{StaticResource SectionStyle}"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       x:Name="GradeText" 
                                       FontSize="48" 
                                       FontWeight="Bold" 
                                       Foreground="#27AE60" 
                                       Margin="0,0,20,0"/>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="GradeDescriptionText" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2C3E50"/>
                                <TextBlock x:Name="GradeScoreText" 
                                           FontSize="12" 
                                           Foreground="#7F8C8D" 
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Health Alerts -->
                <TextBlock Text="⚠️ Health Alerts" Style="{StaticResource SectionStyle}"/>
                <ItemsControl x:Name="HealthAlertsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AlertStyle}">
                                <StackPanel>
                                    <TextBlock Text="{Binding AlertType}" 
                                               FontWeight="SemiBold" 
                                               FontSize="12" 
                                               Foreground="#856404"/>
                                    <TextBlock Text="{Binding Message}" 
                                               FontSize="11" 
                                               Foreground="#856404" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Recommendations -->
                <TextBlock Text="💡 Recommendations" Style="{StaticResource SectionStyle}"/>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock x:Name="RecommendationsText" 
                                   FontSize="12" 
                                   Foreground="#2C3E50" 
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                
                <!-- Detailed Nutrition Facts -->
                <TextBlock Text="📋 Detailed Nutrition Facts" Style="{StaticResource SectionStyle}"/>
                <Border Style="{StaticResource CardStyle}">
                    <ItemsControl x:Name="NutritionFactsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Name}" 
                                               FontSize="12" 
                                               Foreground="#2C3E50"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Amount, StringFormat='{}{0:F1} {1}'}" 
                                               FontSize="11" 
                                               Foreground="#7F8C8D" 
                                               Margin="10,0"/>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Percentage, StringFormat='{}{0:F1}%'}" 
                                               FontSize="11" 
                                               FontWeight="SemiBold" 
                                               Foreground="#3498DB"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="📊 Export Report" 
                    Background="#3498DB" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Click="ExportButton_Click"/>
            <Button Content="✅ Close" 
                    Background="#27AE60" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="15,8"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
