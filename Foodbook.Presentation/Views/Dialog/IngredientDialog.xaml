<Window x:Class="Foodbook.Presentation.Views.IngredientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingredient Dialog" 
        Height="450" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="ðŸ¥˜ Ingredient Details" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#111827"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1">
            <!-- Name -->
            <TextBlock Text="Name *" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBox x:Name="NameTextBox" 
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Padding="12" 
                     FontSize="14" 
                     Margin="0,0,0,16"/>

            <!-- Quantity and Unit -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Quantity *" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="QuantityTextBox"
                             Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                             Padding="12" 
                             FontSize="14"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                    <TextBlock Text="Unit *" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox SelectedItem="{Binding Unit, UpdateSourceTrigger=PropertyChanged}"
                              Padding="12" 
                              FontSize="14">
                        <ComboBoxItem Content="gram"/>
                        <ComboBoxItem Content="kg"/>
                        <ComboBoxItem Content="ml"/>
                        <ComboBoxItem Content="liter"/>
                        <ComboBoxItem Content="cup"/>
                        <ComboBoxItem Content="tablespoon"/>
                        <ComboBoxItem Content="teaspoon"/>
                        <ComboBoxItem Content="piece"/>
                        <ComboBoxItem Content="slice"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Category -->
            <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ComboBox SelectedItem="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                      Padding="12" 
                      FontSize="14"
                      Margin="0,0,0,16">
                <ComboBoxItem Content="Vegetables"/>
                <ComboBoxItem Content="Fruits"/>
                <ComboBoxItem Content="Meat"/>
                <ComboBoxItem Content="Dairy"/>
                <ComboBoxItem Content="Grains"/>
                <ComboBoxItem Content="Spices"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Background="#6B7280"
                    Foreground="White"
                    Padding="20,12"
                    Margin="8"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Save Ingredient" 
                    Style="{StaticResource ModernButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>