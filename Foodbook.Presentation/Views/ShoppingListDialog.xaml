<Window x:Class="Foodbook.Presentation.Views.ShoppingListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🛒 Smart Shopping List" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="CategoryStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#34495E"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
        
        <Style x:Key="ItemStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="20,2,0,2"/>
        </Style>
        
        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🛒 Smart Shopping List" Style="{StaticResource HeaderStyle}"/>
            <TextBlock Text="AI-powered shopping list organized by store sections" 
                       FontSize="12" 
                       Foreground="#7F8C8D"/>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Summary Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Total Items -->
                    <Border Grid.Column="0" Style="{StaticResource SummaryCardStyle}" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="📦 Total Items" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="TotalItemsText" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Estimated Cost -->
                    <Border Grid.Column="1" Style="{StaticResource SummaryCardStyle}" Margin="5,0">
                        <StackPanel>
                            <TextBlock Text="💰 Estimated Cost" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="EstimatedCostText" FontSize="20" FontWeight="Bold" Foreground="#27AE60"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Shopping Time -->
                    <Border Grid.Column="2" Style="{StaticResource SummaryCardStyle}" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock Text="⏱️ Shopping Time" FontWeight="SemiBold" FontSize="12" Foreground="#7F8C8D"/>
                            <TextBlock x:Name="ShoppingTimeText" FontSize="20" FontWeight="Bold" Foreground="#3498DB"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Categories -->
                <TextBlock Text="📋 Shopping Categories" Style="{StaticResource CategoryStyle}"/>
                <ItemsControl x:Name="CategoriesList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFFFFF" 
                                    BorderBrush="#E9ECEF" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Margin="0,0,0,10" 
                                    Padding="15">
                                <StackPanel>
                                    <TextBlock Text="{Binding CategoryName}" 
                                               FontWeight="SemiBold" 
                                               FontSize="14" 
                                               Foreground="#2C3E50"/>
                                    <TextBlock Text="{Binding Items.Count, StringFormat='{}{0} items'}" 
                                               FontSize="11" 
                                               Foreground="#7F8C8D" 
                                               Margin="0,2,0,8"/>
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding Name}" 
                                                               FontSize="12" 
                                                               Foreground="#2C3E50"/>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Quantity, StringFormat='{}{0} {1}'}" 
                                                               FontSize="11" 
                                                               Foreground="#7F8C8D" 
                                                               Margin="10,0"/>
                                                    
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding EstimatedPrice, StringFormat='{}{0:F2}'}" 
                                                               FontSize="11" 
                                                               FontWeight="SemiBold" 
                                                               Foreground="#27AE60"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="📄 Export List" 
                    Background="#3498DB" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Click="ExportButton_Click"/>
            <Button Content="✅ Close" 
                    Background="#27AE60" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Padding="15,8"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
