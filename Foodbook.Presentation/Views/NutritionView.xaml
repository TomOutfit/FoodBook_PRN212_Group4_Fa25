<UserControl x:Class="Foodbook.Presentation.Views.NutritionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foodbook.Presentation.Views"
             xmlns:converters="clr-namespace:Foodbook.Presentation.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="0" BlurRadius="20" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="3" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="AnalyzeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="28,16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#047857"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#10B981" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="400"/>
            <ColumnDefinition Width="1*" MinWidth="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- Beautiful gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="0.5"/>
                <GradientStop Color="#f093fb" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Decorative overlay -->
        <Grid Opacity="0.05">
            <Ellipse Fill="White" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-100,-100,0,0"/>
            <Ellipse Fill="White" Width="150" Height="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-75,-75"/>
            <Ellipse Fill="White" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        </Grid>
        
        <!-- A. Input Control (Cột Trái) -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="🥗 Nguồn Dữ liệu &amp; Nhập liệu" Style="{StaticResource HeaderTextStyle}"/>
                
                <!-- Dropdown chọn nguồn dữ liệu -->
                <TextBlock Text="Chọn nguồn dữ liệu:" FontWeight="SemiBold" FontSize="16" Foreground="#374151" Margin="0,0,0,12"/>
                <ComboBox x:Name="DataSourceComboBox" 
                         SelectedValue="{Binding SelectedDataSource}"
                         Margin="0,0,0,20"
                         Height="48"
                         FontSize="16"
                         Padding="12"
                         BorderThickness="2"
                         BorderBrush="#E5E7EB"
                         Background="White">
                    <ComboBoxItem Content="📚 Chọn từ Công thức Đã Lưu" Tag="Database"/>
                    <ComboBoxItem Content="✍️ Nhập Công Thức Mới" Tag="AI" IsSelected="True"/>
                </ComboBox>
                
                <!-- Khu vực chọn công thức từ database -->
                <StackPanel Visibility="{Binding SelectedDataSource, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Database}">
                    <TextBlock Text="Chọn công thức:" FontWeight="SemiBold" FontSize="16" Foreground="#374151" Margin="0,0,0,12"/>
                    <ComboBox x:Name="RecipeComboBox" 
                             SelectedItem="{Binding SelectedRecipe}"
                             ItemsSource="{Binding Recipes}"
                             DisplayMemberPath="Title"
                             Margin="0,0,0,20"
                             Height="48"
                             FontSize="16"
                             Padding="12"
                             BorderThickness="2"
                             BorderBrush="#E5E7EB"
                             Background="White">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Text" Value="Chọn công thức từ danh sách..."/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>
                
                <!-- Khu vực nhập công thức mới -->
                <StackPanel Visibility="{Binding SelectedDataSource, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=AI}">
                    <TextBlock Text="Nhập công thức:" FontWeight="SemiBold" FontSize="16" Foreground="#374151" Margin="0,0,0,12"/>
                    <TextBox x:Name="CustomRecipeTextBox" 
                            Text="{Binding CustomRecipeText}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            Height="140"
                            FontSize="16"
                            Padding="16"
                            Margin="0,0,0,20"
                            BorderThickness="2"
                            BorderBrush="#E5E7EB"
                            Background="White">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Text" Value="Nhập công thức của bạn ở đây... (VD: Thịt bò 200g, hành tây 1 củ, cà chua 2 quả, muối, tiêu)"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CustomRecipeText}" Value="">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CustomRecipeText}" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
                
                <!-- Mục tiêu sức khỏe -->
                <TextBlock Text="Mục tiêu sức khỏe:" FontWeight="SemiBold" FontSize="16" Foreground="#374151" Margin="0,0,0,12"/>
                <ComboBox x:Name="HealthGoalComboBox" 
                         SelectedValue="{Binding UserGoal}"
                         Margin="0,0,0,28"
                         Height="48"
                         FontSize="16"
                         Padding="12"
                         BorderThickness="2"
                         BorderBrush="#E5E7EB"
                         Background="White">
                    <ComboBoxItem Content="💪 Sức Khỏe Tổng Quát" Tag="Sức Khỏe Tổng Quát" IsSelected="True"/>
                    <ComboBoxItem Content="🏃 Giảm Cân" Tag="Giảm Cân"/>
                    <ComboBoxItem Content="💪 Tăng Cơ" Tag="Tăng Cơ"/>
                    <ComboBoxItem Content="❤️ Tim Mạch" Tag="Tim Mạch"/>
                    <ComboBoxItem Content="🧠 Trí Não" Tag="Trí Não"/>
                </ComboBox>
                
                <!-- Nút Analyze duy nhất -->
                <Button Content="🔍 Phân Tích Dinh Dưỡng" 
                       Command="{Binding AnalyzeNutritionCommand}"
                       Style="{StaticResource AnalyzeButtonStyle}"
                       HorizontalAlignment="Stretch"/>
                
                <!-- Nút Clear -->
                <Button Content="🗑️ Xóa Kết Quả" 
                       Command="{Binding ClearAnalysisCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       HorizontalAlignment="Stretch"
                       Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- B. Result Panel (Cột Phải) -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="📊 Kết quả Phân tích &amp; Đánh giá A.I" Style="{StaticResource HeaderTextStyle}"/>
                    
                    <!-- Loading indicator -->
                    <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                               HorizontalAlignment="Center" Margin="0,20">
                        <TextBlock Text="🤖 AI đang phân tích..." 
                                  FontSize="16" 
                                  Foreground="#3498DB" 
                                  HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" 
                                    Height="4" 
                                    Margin="0,8,0,0" 
                                    Width="200"/>
                    </StackPanel>
                    
                    <!-- Kết quả phân tích -->
                    <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                        
                        <!-- Thông tin dinh dưỡng cơ bản -->
                        <Border Background="#F0FDF4" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderThickness="1" BorderBrush="#BBF7D0">
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="📈 Thông Tin Dinh Dưỡng" FontWeight="Bold" FontSize="18" Margin="0,0,0,16" Foreground="#065F46"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                        <Border Background="#DCFCE7" CornerRadius="8" Padding="12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding TotalCalories, StringFormat='{}{0:F0}'}" FontSize="28" FontWeight="Bold" Foreground="#16A34A" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Calories" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#166534"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Margin="0,0,12,0">
                                        <Border Background="#DBEAFE" CornerRadius="8" Padding="12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding TotalProtein, StringFormat='{}{0:F1}g'}" FontSize="28" FontWeight="Bold" Foreground="#2563EB" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Protein" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#1E40AF"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Margin="0,0,12,0">
                                        <Border Background="#FEF3C7" CornerRadius="8" Padding="12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding TotalCarbs, StringFormat='{}{0:F1}g'}" FontSize="28" FontWeight="Bold" Foreground="#D97706" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Carbs" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#92400E"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="3">
                                        <Border Background="#FEE2E2" CornerRadius="8" Padding="12">
                                            <StackPanel>
                                                <TextBlock Text="{Binding TotalFat, StringFormat='{}{0:F1}g'}" FontSize="28" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center"/>
                                                <TextBlock Text="Fat" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#991B1B"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Đánh giá A.I -->
                        <Border Background="#FFFBEB" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderThickness="1" BorderBrush="#FDE68A">
                            <Border.Effect>
                                <DropShadowEffect Color="#F59E0B" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="🤖 Đánh Giá A.I" FontWeight="Bold" FontSize="18" Margin="0,0,0,16" Foreground="#92400E"/>
                                <TextBlock Text="{Binding AIAssessment}" 
                                          TextWrapping="Wrap" 
                                          FontSize="16" 
                                          LineHeight="24"
                                          Foreground="#78350F"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Cảnh báo sức khỏe -->
                        <Border Background="#FEF2F2" CornerRadius="12" Padding="20" Margin="0,0,0,20" BorderThickness="1" BorderBrush="#FECACA">
                            <Border.Effect>
                                <DropShadowEffect Color="#EF4444" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="⚠️ Cảnh Báo Sức Khỏe" FontWeight="Bold" FontSize="18" Margin="0,0,0,16" Foreground="#991B1B"/>
                                <ItemsControl ItemsSource="{Binding HealthAlerts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,12" BorderThickness="1" BorderBrush="#FEE2E2">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#EF4444" BlurRadius="4" ShadowDepth="1" Opacity="0.05"/>
                                                </Border.Effect>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Icon}" FontSize="18" Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding Message}" 
                                                              TextWrapping="Wrap" 
                                                              FontSize="15" 
                                                              FontWeight="SemiBold"
                                                              Foreground="#991B1B"
                                                              LineHeight="22"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        
                        <!-- Khuyến nghị dinh dưỡng -->
                        <Border Background="#F0F9FF" CornerRadius="12" Padding="20" BorderThickness="1" BorderBrush="#BAE6FD">
                            <Border.Effect>
                                <DropShadowEffect Color="#0EA5E9" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="💡 Khuyến Nghị Dinh Dưỡng" FontWeight="Bold" FontSize="18" Margin="0,0,0,16" Foreground="#0C4A6E"/>
                                <ItemsControl ItemsSource="{Binding NutritionRecommendations}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,8" BorderThickness="1" BorderBrush="#E0F2FE">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#0EA5E9" BlurRadius="4" ShadowDepth="1" Opacity="0.05"/>
                                                </Border.Effect>
                                                <TextBlock Text="{Binding}" 
                                                          TextWrapping="Wrap" 
                                                          FontSize="15" 
                                                          FontWeight="SemiBold"
                                                          Foreground="#0C4A6E"
                                                          LineHeight="22"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>