<UserControl x:Class="Foodbook.Presentation.Views.NutritionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foodbook.Presentation.Views"
             xmlns:converters="clr-namespace:Foodbook.Presentation.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="AnalyzeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#95A5A6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="400"/>
            <ColumnDefinition Width="1*" MinWidth="400"/>
        </Grid.ColumnDefinitions>
        
        <!-- A. Input Control (Cột Trái) -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="🥗 Nguồn Dữ liệu &amp; Nhập liệu" Style="{StaticResource HeaderTextStyle}"/>
                
                <!-- Dropdown chọn nguồn dữ liệu -->
                <TextBlock Text="Chọn nguồn dữ liệu:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ComboBox x:Name="DataSourceComboBox" 
                         SelectedValue="{Binding SelectedDataSource}"
                         Margin="0,0,0,16"
                         Height="40"
                         FontSize="14">
                    <ComboBoxItem Content="📚 Chọn từ Công thức Đã Lưu" Tag="Database"/>
                    <ComboBoxItem Content="✍️ Nhập Công Thức Mới" Tag="AI" IsSelected="True"/>
                </ComboBox>
                
                <!-- Khu vực chọn công thức từ database -->
                <StackPanel Visibility="{Binding SelectedDataSource, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Database}">
                    <TextBlock Text="Chọn công thức:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <ComboBox x:Name="RecipeComboBox" 
                             SelectedItem="{Binding SelectedRecipe}"
                             ItemsSource="{Binding Recipes}"
                             DisplayMemberPath="Title"
                             Margin="0,0,0,16"
                             Height="40"
                             FontSize="14">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Text" Value="Chọn công thức từ danh sách..."/>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>
                
                <!-- Khu vực nhập công thức mới -->
                <StackPanel Visibility="{Binding SelectedDataSource, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=AI}">
                    <TextBlock Text="Nhập công thức:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBox x:Name="CustomRecipeTextBox" 
                            Text="{Binding CustomRecipeText}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            Height="120"
                            FontSize="14"
                            Padding="12"
                            Margin="0,0,0,16">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Text" Value="Nhập công thức của bạn ở đây... (VD: Thịt bò 200g, hành tây 1 củ, cà chua 2 quả, muối, tiêu)"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CustomRecipeText}" Value="">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CustomRecipeText}" Value="{x:Null}">
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
                
                <!-- Mục tiêu sức khỏe -->
                <TextBlock Text="Mục tiêu sức khỏe:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <ComboBox x:Name="HealthGoalComboBox" 
                         SelectedValue="{Binding UserGoal}"
                         Margin="0,0,0,24"
                         Height="40"
                         FontSize="14">
                    <ComboBoxItem Content="💪 Sức Khỏe Tổng Quát" Tag="Sức Khỏe Tổng Quát" IsSelected="True"/>
                    <ComboBoxItem Content="🏃 Giảm Cân" Tag="Giảm Cân"/>
                    <ComboBoxItem Content="💪 Tăng Cơ" Tag="Tăng Cơ"/>
                    <ComboBoxItem Content="❤️ Tim Mạch" Tag="Tim Mạch"/>
                    <ComboBoxItem Content="🧠 Trí Não" Tag="Trí Não"/>
                </ComboBox>
                
                <!-- Nút Analyze duy nhất -->
                <Button Content="🔍 Phân Tích Dinh Dưỡng" 
                       Command="{Binding AnalyzeNutritionCommand}"
                       Style="{StaticResource AnalyzeButtonStyle}"
                       HorizontalAlignment="Stretch"/>
                
                <!-- Nút Clear -->
                <Button Content="🗑️ Xóa Kết Quả" 
                       Command="{Binding ClearAnalysisCommand}"
                       Style="{StaticResource SecondaryButtonStyle}"
                       HorizontalAlignment="Stretch"
                       Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- B. Result Panel (Cột Phải) -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="📊 Kết quả Phân tích &amp; Đánh giá A.I" Style="{StaticResource HeaderTextStyle}"/>
                    
                    <!-- Loading indicator -->
                    <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" 
                               HorizontalAlignment="Center" Margin="0,20">
                        <TextBlock Text="🤖 AI đang phân tích..." 
                                  FontSize="16" 
                                  Foreground="#3498DB" 
                                  HorizontalAlignment="Center"/>
                        <ProgressBar IsIndeterminate="True" 
                                    Height="4" 
                                    Margin="0,8,0,0" 
                                    Width="200"/>
                    </StackPanel>
                    
                    <!-- Kết quả phân tích -->
                    <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                        
                        <!-- Thông tin dinh dưỡng cơ bản -->
                        <Border Background="#E8F5E8" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="📈 Thông Tin Dinh Dưỡng" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,8">
                                        <TextBlock Text="{Binding TotalCalories, StringFormat='{}{0:F0}'}" FontSize="24" FontWeight="Bold" Foreground="#27AE60" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Calories" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,8,8">
                                        <TextBlock Text="{Binding TotalProtein, StringFormat='{}{0:F1}g'}" FontSize="24" FontWeight="Bold" Foreground="#3498DB" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Protein" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,8,8">
                                        <TextBlock Text="{Binding TotalCarbs, StringFormat='{}{0:F1}g'}" FontSize="24" FontWeight="Bold" Foreground="#F39C12" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Carbs" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="3" Grid.Row="0" Margin="0,0,0,8">
                                        <TextBlock Text="{Binding TotalFat, StringFormat='{}{0:F1}g'}" FontSize="24" FontWeight="Bold" Foreground="#E74C3C" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Fat" FontSize="12" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Đánh giá A.I -->
                        <Border Background="#FFF3CD" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="🤖 Đánh Giá A.I" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                                <TextBlock Text="{Binding AIAssessment}" 
                                          TextWrapping="Wrap" 
                                          FontSize="14" 
                                          LineHeight="20"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Cảnh báo sức khỏe -->
                        <Border Background="#F8D7DA" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="⚠️ Cảnh Báo Sức Khỏe" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding HealthAlerts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding Message}" 
                                                              TextWrapping="Wrap" 
                                                              FontSize="14" 
                                                              FontWeight="SemiBold"
                                                              Foreground="#721C24"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        
                        <!-- Khuyến nghị dinh dưỡng -->
                        <Border Background="#D1ECF1" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="💡 Khuyến Nghị Dinh Dưỡng" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                                <ItemsControl ItemsSource="{Binding NutritionRecommendations}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                      TextWrapping="Wrap" 
                                                      FontSize="14" 
                                                      Margin="0,0,0,4"
                                                      Foreground="#0C5460"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>