<Window x:Class="Foodbook.Presentation.Views.RecipeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Dialog" 
        Height="800" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="🍽️ Recipe Details" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#111827"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Title *" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="TitleTextBox" 
                         Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12" 
                         FontSize="14" 
                         Margin="0,0,0,16"/>

                <!-- Description -->
                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12" 
                         FontSize="14" 
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,0,16"/>

                <!-- Cook Time and Difficulty -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Cook Time (minutes) *" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CookTime, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12" 
                                 FontSize="14"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Difficulty *" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedItem="{Binding Difficulty, UpdateSourceTrigger=PropertyChanged}"
                                  Padding="12" 
                                  FontSize="14">
                            <ComboBoxItem Content="Easy"/>
                            <ComboBoxItem Content="Medium"/>
                            <ComboBoxItem Content="Hard"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- Servings -->
                <TextBlock Text="Servings" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Servings, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12" 
                         FontSize="14" 
                         Margin="0,0,0,16"/>

                <!-- Instructions -->
                <TextBlock Text="Instructions *" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox x:Name="InstructionsTextBox"
                         Text="{Binding Instructions, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12" 
                         FontSize="14" 
                         Height="120"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"/>

                <!-- Image URL -->
                <TextBlock Text="Image URL" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBox Text="{Binding ImageUrl, UpdateSourceTrigger=PropertyChanged}"
                         Padding="12" 
                         FontSize="14" 
                         Margin="0,0,0,16"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Background="#6B7280"
                    Foreground="White"
                    Padding="20,12"
                    Margin="8"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Save Recipe" 
                    Style="{StaticResource ModernButton}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>