<Window x:Class="Foodbook.Presentation.MainWindow" x:Name="RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewsTabsNs="clr-namespace:Foodbook.Presentation.Views.Tabs"
        xmlns:viewsWinNs="clr-namespace:Foodbook.Presentation.Views"
        Title="🍽️ FoodBook - AI-Powered Recipe Manager" 
        Height="750" Width="1500"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackgroundBrush}"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize">

    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top app bar (green) -->
        <Border Grid.Row="0" Background="#43A047" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                    <Button x:Name="HamburgerButton" Content="☰" Width="28" Height="28" Margin="0,0,8,0" Background="Transparent" Foreground="White" BorderThickness="0" Click="HamburgerButton_Click"/>
                    <TextBlock Text="🍳" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="FoodBook" FontSize="16" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,6,0">
                    <Button Content="⎯" Background="Transparent" Foreground="White" BorderThickness="0" Width="28" Height="28" Click="MinimizeButton_Click"/>
                    <Button Content="□" Background="Transparent" Foreground="White" BorderThickness="0" Width="28" Height="28" Click="MaximizeButton_Click"/>
                    <Button Content="✕" Background="Transparent" Foreground="White" BorderThickness="0" Width="28" Height="28" Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="{Binding IsSidebarCollapsed, Converter={StaticResource SidebarWidthConverter}}"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border x:Name="Sidebar" Grid.Column="0" Background="#F7F9FB" BorderBrush="#E6E8EA" BorderThickness="0,0,1,0" Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Brand / Title -->
                    <StackPanel Orientation="Horizontal" Margin="4,0,0,12">
                        <TextBlock Text="🍳" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="FoodBook" FontWeight="Bold" Foreground="#2B2F33" Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="1">
                        <Button Command="{Binding SelectTabCommand}" CommandParameter="Dashboard" Margin="0,4" HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Dashboard">
                                        <Setter Property="Background" Value="#FFFFFF"/>
                                        <Setter Property="Foreground" Value="#0F172A"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" ToolTip="Dashboard">
                            <TextBlock Text="🏠" Margin="0,0,10,0"/>
                            <TextBlock Text="Dashboard" Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SelectTabCommand}" CommandParameter="Recipes" Margin="0,4" HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Recipes">
                                        <Setter Property="Background" Value="#FFFFFF"/>
                                        <Setter Property="Foreground" Value="#0F172A"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" ToolTip="My Recipes">
                            <TextBlock Text="📖" Margin="0,0,10,0"/>
                            <TextBlock Text="My Recipes" Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SelectTabCommand}" CommandParameter="Ingredients" Margin="0,4" HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Ingredients">
                                        <Setter Property="Background" Value="#FFFFFF"/>
                                        <Setter Property="Foreground" Value="#0F172A"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" ToolTip="Ingredients">
                            <TextBlock Text="🥗" Margin="0,0,10,0"/>
                            <TextBlock Text="Ingredients" Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SelectTabCommand}" CommandParameter="AI" Margin="0,4" HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="AI">
                                        <Setter Property="Background" Value="#FFFFFF"/>
                                        <Setter Property="Foreground" Value="#0F172A"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" ToolTip="AI Chef">
                            <TextBlock Text="🤖" Margin="0,0,10,0"/>
                            <TextBlock Text="AI Chef" Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SelectTabCommand}" CommandParameter="Analytics" Margin="0,4" HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Analytics">
                                        <Setter Property="Background" Value="#FFFFFF"/>
                                        <Setter Property="Foreground" Value="#0F172A"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" ToolTip="Analytics">
                            <TextBlock Text="📊" Margin="0,0,10,0"/>
                            <TextBlock Text="Analytics" Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding SelectTabCommand}" CommandParameter="Settings" Margin="0,4" HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Settings">
                                        <Setter Property="Background" Value="#FFFFFF"/>
                                        <Setter Property="Foreground" Value="#0F172A"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal" ToolTip="Settings">
                            <TextBlock Text="⚙️" Margin="0,0,10,0"/>
                            <TextBlock Text="Settings" Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}"/>
                        </StackPanel>
                    </Button>
                    </StackPanel>

                    <!-- User Card / Logout -->
                    <Border Grid.Row="2" Background="#FFFFFF" CornerRadius="8" Padding="12" BorderBrush="#E6E8EA" BorderThickness="1" Margin="0,12,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar (initial) -->
                            <Border Width="36" Height="36" CornerRadius="18" Background="#E2E8F0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DataContext.CurrentUser.Username, RelativeSource={RelativeSource AncestorType={x:Type Window}}, StringFormat={}{0:0}}" 
                                           Foreground="#0F172A" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Border>

                            <!-- User info -->
                            <StackPanel Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center"
                                        Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource SidebarVisibilityConverter}}">
                                <TextBlock Text="{Binding DataContext.CurrentUser.Username, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" FontWeight="SemiBold" Foreground="#0F172A"/>
                                <TextBlock Text="{Binding DataContext.CurrentUser.Email, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Foreground="#475569" FontSize="12"/>
                            </StackPanel>

                            <!-- Logout button -->
                            <Button Grid.Column="2" Content="⎋" Width="28" Height="28" Background="#F1F5F9" BorderBrush="#E2E8F0" BorderThickness="1"
                                    ToolTip="Logout" Click="Logout_Click"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Main content: 1 view visible at a time via SelectedTab on MainViewModel -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="24,20,0,24" Padding="0,0,24,0">
                <StackPanel>
                    <viewsTabsNs:DashboardView Visibility="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Dashboard}"
                                              DataContext="{Binding AnalyticsVM}"/>
                    <viewsTabsNs:RecipesView Visibility="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Recipes}"
                                            DataContext="{Binding RecipeListVM}"/>
                    <viewsTabsNs:IngredientsView Visibility="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Ingredients}"
                                                DataContext="{Binding InventoryVM}"/>
                    <viewsTabsNs:AIView Visibility="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=AI}"
                                       DataContext="{Binding AIVM}"/>
                    <viewsTabsNs:AnalyticsView Visibility="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Analytics}"
                                               DataContext="{Binding AnalyticsVM}"/>
                    <viewsTabsNs:SettingsView Visibility="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Settings}"
                                               DataContext="{Binding SettingsVM}"/>
                    <viewsWinNs:NutritionView Visibility="{Binding DataContext.SelectedTab, RelativeSource={RelativeSource AncestorType={x:Type Window}}, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Nutrition}"
                                              DataContext="{Binding NutritionVM}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>